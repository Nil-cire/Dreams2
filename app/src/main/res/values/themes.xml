<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DreamsComeTrue" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.DreamsComeTrue.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DreamsComeTrue.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DreamsComeTrue.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <style name="DarkTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        
        <item name="colorPrimary">@color/east_bay</item>
        <item name="colorPrimaryVariant">@color/east_bay_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/blonde</item>
        <item name="colorSecondaryVariant">@color/marigold</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor" tools:targetApi="l">@color/east_bay</item>
        <item name="menu_icon">@drawable/ic_home_24</item>

    </style>

    <style name="DarkTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <attr name="menu_icon" format="reference"/>

</resources>